                "exec": [
                  "pm.test('Route created', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has route data', function() {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data.route).to.have.property('id');",
                  "    pm.expect(response.data.route).to.have.property('name');",
                  "});",
                  "",
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
